<apex:page docType="html-5.0" sidebar="false" showHeader="false" standardStylesheets="true" standardcontroller="Account" extensions="CreateOrganization">

    <c:DRDP_IndexNew />
    <title>Create Organization</title>

    <div class='content'>
        <apex:form id="datasourcingform">

            <div class="datasourcingrequest container-fluid">
                <div class="col-md-12 section-1 center bannercolor l-orange">
                    <div class="pattern"></div>
                    <div class="dsr-heading heading font-xxl">Organization Creation Form</div>
                </div>
                <div class="container"><!-- section-2 container begins -->
                <div class="section-2 col-md-12 center">
                    <div class="sfdc-errorMessage">
                        <apex:pagemessages escape="false"></apex:pagemessages>
                    </div>
                    <apex:outputPanel rendered="{!oAccount.id==null}">
                        <div class="instruction font-s">* Required Field</div>

                        <!--form action="" method="" id='datasourcingform'-->
                        <div class="table">
                            <div class="table-row">
                                <div class="table-cell font-m bold bold">Account Name <span class='required'>*</span></div>
                                <div class="table-cell font-r">
                                    <div class="table-row">
                                        <!--input type="text" placeholder="Request Name" name="requestname" validate='true' validationtype="alphabets" /-->
                                        <apex:inputField required="true" value="{!oAccount.Name}" />
                                    </div>
                                </div>
                            </div>
                            <div class="table-row">
                                <div class="table-cell font-m bold">Active</div>
                                <div class="table-cell font-r">
                                    <div class="table-row">
                                        <label>
                                            <apex:inputField value="{!oAccount.Active__c}" />
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="table-row">
                                <div class="table-cell font-m bold">Services Provided</div>
                                <div class="table-cell font-r">
                                    <div class="table-row">
                                        <!--<input type="text" placeholder="Requestor Name" name="requestorname" validate='true' />-->
                                        <Apex:inputField value="{!oAccount.Services_Provided__c}" />
                                    </div>
                                </div>
                            </div>
                            <div class="table-row">
                                <div class="table-cell font-m bold">Locations Operated In</div>
                                <div class="table-cell font-r">
                                    <div class="table-row requestor-field">
                                        <!--<input type="text" placeholder="Partner Name" name="Partnername" validate='true' />-->
                                        <Apex:inputField value="{!oAccount.Locations_Operated_In__c}" />
                                    </div>
                                </div>
                            </div>
                            <div class="table-row">
                                <div class="table-cell font-m bold">Logo URL<span class='required'>*</span></div>
                                <div class="table-cell font-r">
                                    <div class="table-row">
                                        <label>
                                            <apex:inputField required="true" value="{!oAccount.Logo_URL__c}" />
                                        </label>
                                    </div>
                                </div>
                            </div>
                            
                           <div class="table-row">
                                <div class="table-cell font-m bold">Organization Welcome URL<span class='required'>*</span></div>
                                <div class="table-cell font-r">
                                    <div class="table-row">
                                        <label>
                                            <apex:inputField required="true" value="{!oAccount.Organization_Welcome_Description__c}" />
                                        </label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="table-row">
                                <div class="table-cell font-m bold">Partner Onboarding Email Message<span class='required'>*</span></div>
                                <div class="table-cell font-r">
                                    <div class="table-row">
                                        <label>
                                            <apex:inputField required="true" value="{!oAccount.Partner_Onboarding_Email_Message__c}" />
                                        </label>
                                    </div>
                                </div>
                            </div>
                            
                        <!------------Saving the Form--------------------------->
                         
                        <!--/form-->
                        </div>
                        <div class="center">
                            <apex:commandButton styleClass="button btn-submit font-m" value="Save" action="{!save}" />
                        </div>
                        <div class="center">
                             <apex:outputLink styleClass="lnk-cancel" value="/apex/CreatePartnership?recTypeName=Partnership_Exploration">Cancel</apex:outputLink>
                         </div>
                    </apex:outputPanel>
                </div>
            </div> <!-- section-2 container ends--> 
            </div>
             <c:DRDP_FooterComponent />
        </apex:form>
    </div>
</apex:page>