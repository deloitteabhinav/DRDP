<apex:page docType="html-5.0" sidebar="false" showHeader="false" standardStylesheets="false" standardController="DRDW_Project__c" extensions="DRDW_createGenerationController" id="thePage">
 
    <head>
    <title>Plan Generation Project</title>
    <c:DRDW_QFOR_Styles />
    <c:DRDW_IndexNew />
    </head>
    <style>
    .lookupInput input{
        width: 0px;
        border: none;
    }
    </style>   
        
     <div class='df_drdw content'>
       <div class="df_drdw-createstudy df_drdw-bp-interim">
        <header>
            <div class="pattern"></div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12 banner-properties">
                        <div class="container">
                        <h1>Create Generation Project</h1>
                        <p></p>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <main class="container">
        <apex:form >
            <div class="request-types-container ">
                <div class="col-md-6 request-item">
                     <div class="hover-wrapper">
                     <span class="name bold font-m">Create New</span>
                     <p class="description font-s">Generation Projects are to be created after successfully passing the DTG gate. Projects can be generated from internal and external sources. If a Generation Project is related to an existing Evaluation Project, the Evaluation Project can be associated with the Generation Project upon creation.</p>
                     <apex:outputlink styleclass="navigate-to-link" value="/apex/DRDW_CreateGeneration">Create</apex:outputlink>
                     </div>
                </div>
                <div class="col-md-6 request-item">
                    <div class="hover-wrapper">
                    <span class="name bold font-m">Use Existing Evaluation Project</span>
                    <p class="description font-s">Use Existing Evaluation Project to Create new a new Generation.Using this will populate few fields on Generation project from the selected Evaluation project.</p>
                    <apex:outputPanel >
                    <apex:inputField value="{!oStudy.Related_Idea_Project__c}" onchange="redirect();"/>
                    <apex:actionFunction action="{!copyFieldsfromEvaluation}" name="redirect"/>
                    </apex:outputPanel>
                    </div>
                </div>
            </div>
         </apex:form>   
        </main>
        </div>
        </div>
       <c:DRDW_SR2_FooterComponent />
       <c:DRDW_QFOR_Scripts />
    <script>
    $(document).ready(function(){
    var anchor = $('.lookupInput a');
    var img = $('.lookupInput img');
    anchor.addClass('navigate-to-link');
    anchor.html('Lookup Evaluation Project');
    img.remove();
    
    });
    
    </script>
</apex:page>